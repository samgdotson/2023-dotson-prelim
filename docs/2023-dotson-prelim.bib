@article{walker_procedural_2017,
	title = {Procedural justice in Canadian wind energy development: A comparison of community-based and technocratic siting processes},
	volume = {29},
	issn = {2214-6296},
	url = {https://www.sciencedirect.com/science/article/pii/S221462961730124X},
