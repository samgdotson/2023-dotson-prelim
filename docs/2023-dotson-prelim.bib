	author = {Bertsch, Valentin and Hall, Margeret and Weinhardt, Christof and Fichtner, Wolf},
	urldate = {2023-01-30},
	date = {2016-11-01},
	langid = {english},
	keywords = {Renewable energy, Public acceptance, Empirical survey, Energy policy objectives, Grid expansion},
	file = {ScienceDirect Full Text PDF:/Users/samdotson/Zotero/storage/TWBKENXN/Bertsch et al. - 2016 - Public acceptance and preferences related to renew.pdf:application/pdf;ScienceDirect Snapshot:/Users/samdotson/Zotero/storage/7P3RDNIP/S0360544216311252.html:text/html},
