	keywords = {Renewable energy, Co-design, Collaborative planning, Decision-support tools, Site suitability assessments, Spatial data},
	file = {ScienceDirect Full Text PDF:/Users/samdotson/Zotero/storage/PEA7A5K7/González and Connell - 2022 - Developing a renewable energy planning decision-su.pdf:application/pdf;ScienceDirect Snapshot:/Users/samdotson/Zotero/storage/KXX7Z63U/S0306261922002318.html:text/html},
